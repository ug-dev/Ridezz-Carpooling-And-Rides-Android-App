<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".offer_ride">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_your_ridezz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/voltaire"
            android:text="Offer ride"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/tb_search_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30sp"
            android:background="@drawable/tb_corners"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/voltaire"
            android:hint="Pick-up"
            android:inputType="textEmailAddress"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_your_ridezz" />

        <Button
            android:id="@+id/tb_search_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30sp"
            android:background="@drawable/tb_corners"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/voltaire"
            android:hint="Drop-off"
            android:inputType="textEmailAddress"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_search_1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/imageborder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_search_2" />

        <Button
            android:id="@+id/offer_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_date_time"
            android:enabled="false"
            android:fontFamily="@font/voltaire"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Set Date"
            android:textColor="#7a999e"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:id="@+id/offer_select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_date_time"
            android:enabled="false"
            android:fontFamily="@font/voltaire"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Set Time"
            android:textColor="#7a999e"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offer_select_date" />

        <Button
            android:id="@+id/submit_offer_ride"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_corners"
            android:enabled="false"
            android:fontFamily="@font/voltaire"
            android:text="Submit"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vehicleNumber" />

        <EditText
            android:id="@+id/numOfPassanger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/voltaire"
            android:hint="Num of Passanger"
            android:inputType="numberSigned"
            android:paddingStart="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offer_select_time" />

        <EditText
            android:id="@+id/vehicleNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="28dp"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="@font/voltaire"
            android:hint="Vehicle Number"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numOfPassanger" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>